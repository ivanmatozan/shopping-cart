{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        {% for index, product in products %}
            <div class="col-xs-12 col-sm-6 col-md-4">
                {% include 'products/partials/item.twig' with {product: product} %}
            </div>

            {% if (index + 1) % 3 == 0 %}
                </div>
                <div class="row">
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}